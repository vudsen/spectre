<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="202601271737" author="vudsen">
        <createTable tableName="arthas_instance">
            <column name="id" type="java.sql.Types.VARCHAR(32)" >
                <constraints primaryKey="true"/>
            </column>
            <column name="channel_id" type="java.sql.Types.VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="endpoint_password" type="java.sql.Types.VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="bound_port" type="java.sql.Types.INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="session_id" type="java.sql.Types.VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="runtime_node_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="restricted_mode" type="bool">
                <constraints nullable="false"/>
            </column>
            <column name="bundle_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ext_point_id" type="java.sql.Types.VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="jvm" type="java.sql.Types.VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="last_access" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="arthas_instance" indexName="channel_id_idx">
            <column name="channel_id"/>
        </createIndex>
    </changeSet>


</databaseChangeLog>