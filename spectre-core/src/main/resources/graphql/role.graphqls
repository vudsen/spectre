type RoleQueries {
    roles(page: Int, size: Int): RolePageResult!
    role(id: Long!): RolePO
    # 返回已经绑定的用户
    boundUsers(roleId: Long!, page: Int, size: Int): UserPage!
    userRoles(userId: Long!): [RolePO!]!
    searchRoleByName(name: String): RolePageResult!
}


type RolePO {
    id: Long!
    name: String!
    description: String
    createdAt: Timestamp
}

type RolePageResult {
    totalPages: Int
    result: [RolePO!]!
}

